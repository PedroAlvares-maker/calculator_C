#include <stdio.h>

int inicio () {
    printf("===============================\n");
    printf("Calculadora Simples\n");
    printf("===============================\n");
    printf("Selecione uma operacao\n");
    printf("1. Adicao\n");
    printf("2. Subtracao\n");
    printf("3. Multiplicacao\n");
    printf("4. Divisao\n");
    printf("5. Sair\n");
    printf("Opcao: ");
}
int v();
int ak() {
    char i;
    printf("Resposta invalida. Por favor, digite 's' para sim ou 'n' para nao: ");
    scanf(" %c", &i);
    switch (i) {
    case 's':
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        inicio();
        v();
        break;
    case 'S':
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        inicio();
        v();
        break;
    case 'n':
        printf("Obrigado por usar a calculadora! Ate a proxima.\n");
        break;
    case 'N':
        printf("Obrigado por usar a calculadora! Ate a proxima.\n");
        break;
    default:
        ak();
        break;
    }
}
int sn();
int soma () {
    float a, b;
    printf("Digite o primeiro numero: ");
    scanf("%f", &a);
    printf("Digite o segundo numero: ");
    scanf("%f", &b);
    printf("Resultado: %.2f + %.2f = %.2f\n", a, b, a+b);
    sn();
}
int subtracao () {
    float a, b;
    printf("Digite o primeiro numero: ");
    scanf("%f", &a);
    printf("Digite o segundo numero: ");
    scanf("%f", &b);
    printf("Resultado: %.2f - %.2f = %.2f\n", a, b, a-b);
    sn();
}
int produto () {
    float a, b;
    printf("Digite o primeiro numero: ");
    scanf("%f", &a);
    printf("Digite o segundo numero: ");
    scanf("%f", &b);
    printf("Resultado: %.2f x %.2f = %.2f\n", a, b, a*b);
    sn();
}
int divisao () {
    float a, b;
    printf("Digite o primeiro numero: ");
    scanf("%f", &a);
    printf("Digite o segundo numero: ");
    scanf("%f", &b);
    if (b==0) {
        printf("Erro: Divisao por zero nao eh permitida.\n");
        sn();
    } else {
        printf("Resultado: %.2f/%.2f = %.2f\n", a, b, a/b);
        sn();
    }
}
int v();
int sn () {
    char i;
    printf("Deseja realizar outra operacao? (s/n): ");
    scanf(" %c", &i);
    switch (i) {
    case 's':
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        inicio();
        v();
        break;
    case 'S':
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        printf("\n");
        inicio();
        v();
        break;
    case 'n':
        printf("Obrigado por usar a calculadora! Ate a proxima.\n");
        break;
    case 'N':
        printf("Obrigado por usar a calculadora! Ate a proxima.\n");
        break;
    default:
        ak();
        break;
    }
}

int v () {
    char N;
    scanf("%c", &N);
    switch (N) {
    case 1:
        soma();
        break;
    case 2:
        subtracao();
        break;
    case 3:
        produto();
        break;
    case 4:
        divisao();
        break;
    case 5:
        printf("Obrigado por usar a calculadora! Ate a proxima.\n");
        break;
    default:
        printf("Erro, digite um numero valido: ");
        v();
        break;
    }
}
int main () {
    inicio();
    v();
}
